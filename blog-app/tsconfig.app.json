{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.js"], // Added "src/**/*.js" to include JavaScript files
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "allowJs": true, // Added "allowJs": true to allow processing JavaScript files
    "target": "ES2015", // Optional, customize as needed for browser compatibility
  }
}
